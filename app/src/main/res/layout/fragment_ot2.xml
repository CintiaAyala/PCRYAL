<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl1"
    android:orientation="vertical"
    android:background="@color/colorGrayDark">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutServicios"
            android:orientation="horizontal"
            android:layout_margin="20dp">
            <Button
                android:id="@+id/btnServ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:background="@drawable/style_button"
                android:text="Agregar Servicios" />
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvServicios"
                android:lines="5"
                android:ellipsize="end"
                android:text="" />
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            android:layout_below="@+id/layoutServicios"
            android:id="@+id/layoutMateriales">
            <Button
                android:id="@+id/btnMateriales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:background="@drawable/style_button"
                android:text="Agregar Materiales" />
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvMateriales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="5"
                android:ellipsize="end"
                android:text="" />
            </ScrollView>
        </LinearLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tableCompresion"
            android:layout_margin="5dp"
            android:layout_below="@+id/layoutMateriales">
            <TableRow android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COMPRESIONES CILINDRICAS"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow android:layout_height="match_parent"
                android:layout_width="match_parent">
                <TextView
                    android:id="@+id/tvCL1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_weight="0.2"
                    android:text="CL1"
                    android:textSize="15dp" />
                <TextView android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:textAlignment="center"
                    android:text="L"
                    android:textSize="15dp"
                    android:layout_column="1"/>
                <EditText android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:id="@+id/cbCL1L"
                    android:inputType="number"
                    style="@style/MyEditTextstyle"
                    android:layout_column="2"/>
                <TextView android:layout_height="wrap_content"
                    android:width="0dp"
                    android:text="R"
                    android:textAlignment="center"
                    android:layout_weight="0.2"
                    android:textSize="15dp"
                    android:layout_column="3"/>
                <EditText android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:id="@+id/cbCL1R"
                    android:inputType="number"
                    style="@style/MyEditTextstyle"
                    android:layout_column="4" />
                <TextView
                    android:id="@+id/tvCL4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="5"
                    android:layout_weight="0.2"
                    android:layout_marginLeft="10dp"
                    android:text="CL4"
                    android:textSize="15dp" />
                <TextView android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_column="6"
                    android:text="L"
                    android:textSize="15dp"
                    android:textAlignment="center"/>
                <EditText android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:id="@+id/cbCL4L"
                    style="@style/MyEditTextstyle"
                    android:inputType="number"
                    android:layout_column="7"/>
                <TextView android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:text="R"
                    android:textSize="15dp"
                    android:layout_column="8"
                    android:textAlignment="center"/>
                <EditText android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:inputType="number"
                    style="@style/MyEditTextstyle"
                    android:id="@+id/cbCL4R"
                    android:layout_column="9"/>
            </TableRow>
            <TableRow android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvCL2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_weight="0.2"
                    android:text="CL2"
                    android:textSize="15dp" />
                <TextView android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:textAlignment="center"
                    android:text="L"
                    android:textSize="15dp"
                    android:layout_column="1"/>
                <EditText android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:id="@+id/cbCL2L"
                    android:inputType="number"
                    style="@style/MyEditTextstyle"
                    android:layout_column="2" />
                <TextView android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:text="R"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:layout_column="3"/>
                <EditText android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:id="@+id/cbCL2R"
                    style="@style/MyEditTextstyle"
                    android:inputType="number"
                    android:layout_column="4" />
                <TextView
                    android:id="@+id/tvCL5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="5"
                    android:layout_weight="0.2"
                    android:text="CL5"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp" />
                <TextView android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:text="L"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:layout_column="6"/>
                <EditText android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_column="7"
                    android:inputType="number"
                    style="@style/MyEditTextstyle"
                    android:id="@+id/cbCL5L" />
                <TextView android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:text="R"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:layout_column="8"/>
                <EditText android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_column="9"
                    android:inputType="number"
                    style="@style/MyEditTextstyle"
                    android:id="@+id/cbCL5R" />
            </TableRow>
            <TableRow android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvCL3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_weight="0.2"
                    android:text="CL3"
                    android:textSize="15dp" />
                <TextView android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:text="L"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:layout_column="1"/>
                <EditText android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:id="@+id/cbCL3L"
                    style="@style/MyEditTextstyle"
                    android:inputType="number"
                    android:layout_column="2"/>
                <TextView android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:text="R"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:layout_column="3"/>
                <EditText android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:id="@+id/cbCL3R"
                    android:inputType="number"
                    style="@style/MyEditTextstyle"
                    android:layout_column="4"/>
                <TextView
                    android:id="@+id/tvCL6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="5"
                    android:layout_weight="0.2"
                    android:text="CL6"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp" />
                <TextView android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:text="L"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:layout_column="6"/>
                <EditText android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:id="@+id/cbCL6L"
                    android:inputType="number"
                    android:layout_weight="0.2"
                    style="@style/MyEditTextstyle"
                    android:layout_column="7"/>
                <TextView android:layout_height="wrap_content"
                    android:width="0dp"
                    android:layout_weight="0.2"
                    android:layout_column="8"
                    android:textAlignment="center"
                    android:text="R"
                    android:textSize="15dp"/>
                <EditText android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:id="@+id/cbCL6R"
                    style="@style/MyEditTextstyle"
                    android:inputType="number"
                    android:layout_column="9"/>
            </TableRow>
            <TableRow android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:width="0dp"
                    android:layout_column="0"
                    android:text="Fin OT"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/edHrFinOt"
                    style="@style/MyEditTextstyle"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView5"
                    android:layout_weight="0.5"
                    android:layout_column="1"
                    android:width="0dp"
                    android:focusable="false" />
                <TextView android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_column="2"
                    android:width="0dp" />
            <TextView android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_column="3"
                android:width="0dp"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_save"
        android:id="@+id/btnGuardar"
        android:layout_marginBottom="75dp"
        android:layout_marginRight="30dp" />
</LinearLayout>
</LinearLayout>
